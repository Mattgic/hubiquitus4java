<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/util 
       	   http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <util:map id="xmppConfigMap" map-class="java.util.HashMap">
        <entry key="configuration.type" value="common_init_configuration"/>
        <entry key="configuration.id" value="MyId"/>
        <entry key="configuration.localhostaddress" value="Here" />
        <entry key="publisher.xmpphostaddress" value="localhost" />
        <entry key="publisher.xmpphostport" value="port" />
        
        <entry key="publisher.xmppusername" value="xmppusername" />
        <entry key="publisher.xmppuserpassword" value="xmppuserpassword" />
        
        <entry key="xmpp.tls.enabled" value="true" />
        
        
        <entry key="publisher.admingroups"><ref bean="adminGroupsList"/></entry>
        <entry key="fetcher.useproxy" value="false" />
        <entry key="fetcher.proxyaddress" value="localhost" />
        <entry key="fetcher.proxyport" value="port" />
        
        <entry key="xmpp.debug.enable" value="true" />
        
    </util:map>
	  
	<util:list id="adminGroupsList">
        <value>ADMIN_GROUP</value>
    </util:list>
</beans>