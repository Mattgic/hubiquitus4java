<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/util 
		   http://www.springframework.org/schema/util/spring-util-3.0.xsd">

 	<bean id="exceptionCollector" class="org.hubiquitus.hubotsdk.service.impl.ExceptionCollectorImpl"/>
  
  	<bean id="jSonParser" class="org.hubiquitus.hapi.utils.impl.CommonJSonParserImpl"/>
  
  	<bean id="xmppBotConf" class="org.hubiquitus.hubotsdk.service.impl.XmppBotConfiguration">
	  	<property name="xmppConfigMap" ref="xmppConfigMap" />
	</bean>
	
	<bean id="xmppComponentConf" class="org.hubiquitus.hapi.service.impl.XmppComponentConfiguration">
	  	<property name="hServerConfigMap" ref="hServerConfigMap" />
	</bean>
  
  	<bean id="smackApiController" class="org.hubiquitus.hubotsdk.application.push.impl.SmackApiControllerImpl" autowire="default">
  		<property name="jSonParser" ref="jSonParser"/>
  		<property name="xmppComponentConf" ref="xmppComponentConf"/>
  		<!-- The hubot bean must be defined in the hubot-applicationContext.xml of each bot -->
  		<property name="botInterface" ref="hubot"/>
  		<property name="xmppBotConfiguration" ref="xmppBotConf"/>
  	</bean>
  	
  	<bean id="xmppEntryPublisher" class="org.hubiquitus.hubotsdk.application.push.impl.XmppEntryPublisherImpl">
		<property name="smackApiController" ref="smackApiController"/>
	</bean>
	
	<util:map id="hServerConfigMap" map-class="java.util.HashMap">
        <entry key="subDomain" value="oserver"/>
        <entry key="requestTimeout" value="50000"/>
    </util:map>
    
	
</beans>