<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/util 
		   http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="xmppServerHost" class="java.lang.String">
           <constructor-arg>
<!--                
	<value>hub.novediagroup.com</value>
 -->        
 		   <value>nsltdpn0094</value>
 		</constructor-arg>
    </bean>
	<bean id="hServerSubDomain" class="java.lang.String">
           <constructor-arg>
                <value>hserver</value>
           </constructor-arg>
    </bean>

	<bean id="jSonParser" class="org.hubiquitus.hapi.utils.impl.CommonJSonParserImpl"/>

	<bean id="pubSubRequester" class="org.hubiquitus.hserver.pubsub.impl.PubSubRequester" >
		<property name="pubSubAddress" value="#{'pubsub.' + xmppServerHost}" />
		<property name="hServerAddress" value="#{hServerSubDomain + '.' + xmppServerHost}" />
	</bean>
	

	<bean id="component" class="org.hubiquitus.hserver.HServerComponent" autowire="default">
  		<property name="jSonParser" ref="jSonParser"/>
  		<property name="hServerConfiguration" ref="hServerConfiguration"/>
  		<property name="hServerDataBase" ref="hServerDataBase"/>
  		<property name="pubSubRequester" ref="pubSubRequester"/>
  	</bean>
  	
  	<bean id="hServerConfiguration" class="org.hubiquitus.hserver.HServerConfiguration" autowire="default">
  		<property name="hServerConfigMap" ref="hServerConfigMap"/>
  	</bean>

	<bean id="hserver" class="org.hubiquitus.hserver.HServerMain" autowire="default">
  		<property name="component" ref="component"/>
  	</bean>
	
	<util:map id="hServerConfigMap" map-class="java.util.HashMap">
        <entry key="xmppServerHost" value-ref="xmppServerHost" />
        <entry key="xmppServerPort" value="5275"/>
        <entry key="xmppusername" value="nslt_hubalert_bots" />
		<entry key="xmppuserpassword" value="hubalert$1357$" />
        <entry key="subDomain" value-ref="hServerSubDomain"/>
        <entry key="secretKey" value="secret du hserver hubiquitus"/>
        
        <entry key="subDomainDescription" value="Hubiquitus hServer"/>
        
    </util:map>

    
	
</beans>