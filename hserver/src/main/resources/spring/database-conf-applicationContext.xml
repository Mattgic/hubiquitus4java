<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/util 
		   http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="hServerDataBase" class="org.hubiquitus.hapi.persistence.impl.DataBaseMongoImpl" autowire="default">
  		<property name="dataBaseConfigMap" ref="dataBaseConfigMap"/>
  	</bean>
  	
  	<bean id="dataBaseConfigMap" class="org.hubiquitus.hapi.persistence.impl.MongoDbConfiguration" autowire="default">
  		<property name="mongoDbConfigMap" ref="mongoDbConfigMap"/>
  	</bean>
	
	<util:map id="mongoDbConfigMap" map-class="java.util.HashMap">
        <entry key="mongoDbHost" value="localhost"/>
        <entry key="mongoDbPort" value="27017"/>
        <entry key="mongoDbPoolSize" value="10"/>
        <entry key="mongoDbDefaultCollection" value="defaultCollection"/>
        <entry key="mongoDbDefaultDbName" value="dbDefaultDbName"/>
    </util:map>
	
</beans>