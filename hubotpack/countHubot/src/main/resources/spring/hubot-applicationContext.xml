<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<!--<bean id="tweetRiverBotConf" class="org.hubiquitus.hubots.tweetriverbot.service.impl.TweetRiverBotConfigurationSpring">-->
	<bean id="countTweetsBotConf" class="org.hubiquitus.hubiquitus4j.hubotpack.countTweets.service.impl.CountTweetsBotConfigurationSpring">	
		<property name="hubotConfigMap" ref="hubotConfigMap" />
	</bean>
		
	<!--<bean id="hubot" class="org.hubiquitus.hubots.tweetriverbot.application.TweetRiverBot">-->
	<bean id="hubot" class="org.hubiquitus.hubiquitus4j.hubotpack.countTweets.application.CountTweetsBot">
	  	<property name="exceptionCollector" ref="exceptionCollector" />
	  	<property name="xmppEntryPublisher" ref="xmppEntryPublisher"/>
	  	<property name="hubotConfig" ref="countTweetsBotConf" />
		<property name="jSonParser" ref="jSonParser"/>
	</bean>
</beans>