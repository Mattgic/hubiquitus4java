<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean id="feedBotConf" class="org.hubiquitus.hubots.feedbot.service.impl.FeedBotConfigurationSpring">
		<property name="hubotConfigMap" ref="hubotConfigMap" />
	</bean>
	
	<bean id="feedXmppEntryPublisher" class="org.hubiquitus.hubots.feedbot.application.push.FeedXmppEntryPublisher">
		<property name="smackApiController" ref="smackApiController"/>
		<property name="bot" ref="hubot"/>
	</bean>
	
	<bean id="hubot" class="org.hubiquitus.hubots.feedbot.application.FeedBot">
	  	<property name="exceptionCollector" ref="exceptionCollector" />
	  	<property name="xmppEntryPublisher" ref="feedXmppEntryPublisher"/>
	  	<property name="hubotConfig" ref="feedBotConf" />
	</bean>

</beans>