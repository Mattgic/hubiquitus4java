<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       	   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       	   http://www.springframework.org/schema/util 
		   http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <util:map id="hubotConfigMap" map-class="java.util.HashMap">
        <entry key="nodename" value="testt"/>
        <entry key="title" value="Testt"/>
        <entry key="publisher.allowedrostergroups"><ref bean="allowedrostergroups"/></entry>
    	<entry key="fetcher.feedlink" value="http://www.01net.com/rss/actus.xml"/>
    	<entry key="fetcher.interval" value="15000" />
    </util:map>
	
	<util:list id="allowedrostergroups">
        <value>GD-NSLT-Effectifs</value>
        <value>GS-NSLT-AlertmamaAdmin</value>
    </util:list>
    
</beans>